<resources>

    <style name="Widget.EmptyStateText" parent="">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ThemeOverlay.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.BottomSheet.Modal</item>
        <item name="android:windowSoftInputMode">adjustPan|stateHidden</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.BottomSheet.Modal</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
    </style>

    <style name="Widget.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?attr/shapeAppearanceLargeComponent</item>
    </style>

    <style name="ThemeOverlay.ActionBar" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="elevation">0dp</item>
        <item name="android:textColorPrimary">@color/yellow_600</item>
        <item name="android:colorBackground">@android:color/white</item>
    </style>

    <style name="ThemeOverlay.SeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@color/yellow_700_variant</item>
        <item name="android:progressTint">@color/yellow_700</item>
        <item name="android:thumbTint">@color/yellow_700</item>
    </style>

    <style name="ThemeOverlay.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/yellow_600</item>
        <item name="colorAccent">@color/red_accent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="AppTheme.DialogWithTitle" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/yellow_600</item>
        <item name="colorAccent">@color/red_accent</item>
        <item name="android:windowNoTitle">false</item>
    </style>

</resources>
